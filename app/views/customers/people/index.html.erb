<div class="container">
	<div class="row">
		<div class="col-lg-12">

			<h4>
				<mark>偉人一覧</mark>
				<span class="attention">(アイウエオ順)</span>
			</h4>

			<ul class="column">
			<% @people.each do |person| %>
				<li class="people-list">
					<div class="color_box">
						<% [person.portraits.sample].each do |portrait| %>
    		    			<%= attachment_image_tag portrait, :image, :fill, 90, 100, fallback: "/images/no_image.jpg" %>
    		   			<% end %>
						<span><%= link_to person.name, person_path(person.id), id: "people_name"%>
						</span>
					</div>
			    </li>
			<% end %>
			</ul>

		</div>
	</div>
</div>