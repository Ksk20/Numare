<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h4><mark>タグ一覧</mark></h4>
      <table class="table" style="border: 1px solid #696969; width: 400px">
        <thead>
          <tr class="active">
            <th>タグ名</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= tag.is_effective ? '有効　　' : '無効　　' %></td>
              <td><%= link_to "編集する", edit_admins_tag_path(tag.id), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
