<div class="container">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<h4 style="padding-bottom: 10px;"><span style="background-color:#D5D7DD;">　会員一覧　</span></h4>
			<table class="table" style="margin-top: 20px;">
				<tr class="active">
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td><%= link_to admins_customer_path(customer) do %>
							<%= customer.name %>
						<% end %>
					</td>
					<td><%= customer.email %></td>
					<td><% if customer.is_member == "Available" %>
							有効
						<% else %>
							退会済み
						<% end %>
					</td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>